$products=[
    ["name"=>"Laptop","price"=>150000],
    ["name"=>"Mouse","price"=>2500],
    ["name"=>"Keyboard","price"=>4500],
    ["name"=>"Headphones","price"=>8000]
    ];
$products[]=["name"=>"Webcam","price"=>5500];


echo "<h2>Product List</h2>";
echo "<table border='1' cellpadding='8' cellspacing='0'>
<tr>
    <th>Product</th>
    <th>Price(LKR)</th>
</th>";    


foreach ($products as $p){
    echo "<tr>
            <td>{$p['name']}</td>
            <td>{$p['price']}</td>
            </tr>";
}


echo "</table>";

$total=0;


foreach ($products as $p){
  $total+=$p['price'];
}


echo "<h3>Total value: LKR $total</h3>";

?>

